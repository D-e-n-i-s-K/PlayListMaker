<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_main_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/plm_blue</item>
        <item name="android:paddingHorizontal">@dimen/activity_main_body_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/activity_main_body_paddingEnd</item>
        <item name="android:paddingBottom">@dimen/activity_main_body_paddingBottom</item>
    </style>

    <style name="activity_main_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/activity_main_header_textSize</item>
        <item name="android:textColor">@color/plm_white</item>
        <item name="android:paddingTop">@dimen/activity_main_header_paddingTop</item>
        <item name="android:paddingBottom">@dimen/activity_main_header_paddingBottom</item>
        <item name="android:layout_marginRight">@dimen/activity_main_header_layout_marginRight</item>
        <item name="android:layout_marginTop">@dimen/activity_main_header_layout_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/activity_main_header_layout_marginBottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@integer/activity_main_header_fontWeight</item>
    </style>

    <style name="activity_main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingHorizontal">@dimen/activity_main_button_paddingHorizontal</item>
        <item name="android:textColor">@color/plm_black</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/activity_main_button_textSize</item>
         <item name="cornerRadius">@dimen/activity_main_button_cornerRadius</item>
       <item name="iconGravity">textStart</item>

        <item name="android:backgroundTint">@color/plm_white</item>
        <item name="iconTint">@color/plm_black</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="activity_settings_body">
        <item name="android:background">@color/plm_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="activity_settings_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/arrow_back_icon</item>
        <item name="android:drawablePadding">@dimen/activity_settings_header_drawablePadding</item>
        <item name="android:paddingStart">@dimen/activity_settings_header_paddingStart</item>
        <item name="android:paddingTop">@dimen/activity_settings_header_paddingTop</item>
        <item name="android:paddingBottom">@dimen/activity_settings_header_paddingBottom</item>
        <item name="android:textColor">@color/plm_black</item>
        <item name="android:textSize">@dimen/activity_settings_header_textSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@integer/activity_settings_header_fontWeight</item>
    </style>

    <style name="activity_settings_switchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_settings_switchButton_layout_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/activity_settings_switchButton_marginBottom</item>
        <item name="android:paddingStart">@dimen/activity_settings_switchButton_paddingStart</item>
        <item name="android:paddingEnd">@dimen/activity_settings_switchButton_paddingEnd</item>
        <item name="android:text">@string/night_mode</item>
        <item name="android:textSize">@dimen/activity_settings_switchButton_textSize</item>
        <item name="android:fontWeight">@integer/activity_settings_switchButton_fontWeight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="activity_settings_button"   parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">@dimen/activity_setting_button_paddingStart</item>
        <item name="android:paddingTop">@dimen/activity_setting_button_paddingTop</item>
        <item name="android:paddingEnd">@dimen/activity_setting_button_paddingEnd</item>
        <item name="android:paddingBottom">@dimen/activity_setting_button_paddingBottom</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">@integer/activity_setting_button_letterSpacing_0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_setting_button_text_size</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/activity_setting_button_icon_size</item>
        <item name="iconTint">@color/plm_gray</item>
    </style>


    <style name="activity_search_linearLayout_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:layout_marginLeft">@dimen/activity_search_linearLayout_search_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/activity_search_linearLayout_search_marginTop</item>
        <item name="android:layout_marginRight">@dimen/activity_search_linearLayout_search_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/activity_search_linearLayout_search_marginBottom</item>
    </style>

    <style name="activity_search_imageView_searchIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/plm_light_gray</item>
        <item name="android:src">@drawable/search_icon</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/search</item>
        <item name="android:tint">@color/plm_gray</item>
        <item name="android:paddingLeft">@dimen/activity_search_imageView_searchIcon_paddingLeft</item>
        <item name="android:paddingRight">@dimen/activity_search_imageView_searchIcon_paddingRight</item>
    </style>

    <style name="activity_search_EditText_search">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/search_editText_hint_text</item>
        <item name="android:paddingTop">@dimen/activity_search_editText_paddingTop</item>
        <item name="android:paddingBottom">@dimen/activity_search_editText_editText_paddingBottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

</resources>